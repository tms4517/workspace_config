{
	"Section": {
	  "prefix": ["sec"],
	  "body": [
		"// {{{ ${1: Section name}",
		"$0",
		"// }}} $1"
	  ],
	  "description": "Section title"
	},

	"dff_norst_noen": {
	  "prefix": ["dff_norst_noen"],
	  "body" : [
		"// DFF: .ck($1),",
		"//      .q($2)",
		"//      .d($3),",
		"always_ff @(posedge ${1:ck})",
		"  ${2:q} <= ${3:d};",
		"",
		"$0"
	  ],
	  "description": "DFF: No reset, No enable"
	},

	"dff_norst_en": {
	  "prefix": ["dff_norst_en"],
	  "body": [
		"// DFF: .ck($1),",
		"//      .en($2),",
		"//      .q($3)",
		"//      .d($4),",
		"always_ff @(posedge ${1:ck})",
		"  if (${2:en})",
		"    ${3:q} <= ${4:d};",
		"  else",
    	"    $3 <= $3;",
		"",
		"$0"
	  ],
	  "description": "DFF: No reset, Enable"
	},

	"dff_arst_noen": {
	  "prefix": ["dff_arst_noen"],

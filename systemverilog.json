	  "body": [
		"// TFF: .ck($1),",
		"//      .arst($2),",
		"//      .q($3)",
		"//      .t($5),",
		"always_ff @(posedge ${1:ck}, posedge ${2:arst})",
		"  if ($2)",
		"    ${3:q} <= ${4:reset value};",
		"  else if (${5:t})",
		"    $3 <= !$3;",

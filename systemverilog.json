		"// DFF: .ck($1),",
		"//      .arst($2),",
		"//      .q($3)",
		"//      .d($5),",
		"always_ff @(posedge ${1:ck}, posedge ${2:arst})",
		"  if ($2)",
		"    ${3:q} <= ${4:reset value};",
		"  else",
		"    $3 <= ${5:d};",
		"",
		"$0"
	  ],
	  "description": "DFF: Async reset, No enable"
	},

